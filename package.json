{
  "name": "mbaa-cmd",
  "displayName": "MBAA _c Syntax",
  "license": "MIT",
  "icon": "images/icon.png",
  "description": "Syntax highlighting for Melty Blood Actress Again _c.txt command tables",
  "version": "0.0.1",
  "repository": { "type": "git", "url": "https://github.com/bigorados-bigo/MBAA-Commands" },
  "publisher": "bigo",
  "engines": { "vscode": "^1.104.0" },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:mbaa-cmd",
    "onLanguage:mbaa-vector", 
    "onLanguage:mbaa-selist"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "mbaa-cmd",
        "aliases": ["MBAA Commands", "mbaa-cmd"],
        "filenamePatterns": ["*_c.txt"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mbaa-vector",
        "aliases": ["MBAA Vectors", "mbaa-vector"],
        "filenamePatterns": [
          "vector.txt",
          "VectorList.txt",
          "VectorSample.txt",
          "Vector*.txt"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mbaa-selist",
        "aliases": ["MBAA SeList", "mbaa-selist"],
        "filenamePatterns": [
          "*_SeList.txt",
          "*SeList.txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mbaa-cmd",
        "scopeName": "source.mbaa",
        "path": "./syntaxes/mbaa-cmd.tmLanguage.json"
      },
      {
        "language": "mbaa-vector",
        "scopeName": "source.mbaa.vector",
        "path": "./syntaxes/mbaa-vector.tmLanguage.json"
      },
      {
        "language": "mbaa-selist",
        "scopeName": "source.mbaa.selist",
        "path": "./syntaxes/mbaa-selist.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "MBAA Poster (Dim Zeros)",
        "uiTheme": "vs-dark",
        "path": "./themes/mbaa-poster-dim-color-theme.json"
      },
      {
        "label": "MBAA Poster (White Zeros)",
        "uiTheme": "vs-dark",
        "path": "./themes/mbaa-poster-whitezeros-color-theme.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [

       { "scope": "constant.numeric.id.mbaa",         "settings": { "foreground": "#9CCC65", "fontStyle": "bold" } },
       { "scope": "constant.language.motion.mbaa",    "settings": { "foreground": "#00B3A6", "fontStyle": "bold" } },
       { "scope": "support.constant.command.mbaa",    "settings": { "foreground": "#00B3A6", "fontStyle": "bold" } },
       { "scope": "constant.numeric.pattern-id.mbaa", "settings": { "foreground": "#FFC400" } },
       { "scope": "constant.numeric.meter.mbaa",      "settings": { "foreground": "#435fff" } },
       { "scope": "variable.other.assist.mbaa",       "settings": { "foreground": "#00E5FF" } },
       { "scope": "variable.other.projectile.mbaa",   "settings": { "foreground": "#7C4DFF" } },
       { "scope": "variable.other.dash.mbaa",         "settings": { "foreground": "#FF4081" } },
           
       { "scope": "constant.numeric.binary.flagset1.bit.a.mbaa", "settings": { "foreground": "#2c4af5", "fontStyle": "bold" } },
       { "scope": "constant.numeric.binary.flagset1.bit.b.mbaa", "settings": { "foreground": "#FF9800" } },
       { "scope": "constant.numeric.binary.flagset1.bit.c.mbaa", "settings": { "foreground": "#ff009d" } },
       { "scope": "constant.numeric.binary.flagset1.bit.d.mbaa", "settings": { "foreground": "#81C784" } },
       { "scope": "constant.numeric.binary.flagset1.bit.e.mbaa", "settings": { "foreground": "#fa0000" } },
       { "scope": "constant.numeric.binary.flagset1.bit.f.mbaa", "settings": { "foreground": "#00E5FF" } },
       { "scope": "constant.numeric.binary.flagset1.bit.g.mbaa", "settings": { "foreground": "#7C4DFF" } },
       { "scope": "constant.numeric.binary.flagset1.bit.h.mbaa", "settings": { "foreground": "#6aeb00" } },

       { "scope": "constant.numeric.binary.flagset2.bit.i.mbaa", "settings": { "foreground": "#2c4af5", "fontStyle": "bold" } },
       { "scope": "constant.numeric.binary.flagset2.bit.j.mbaa", "settings": { "foreground": "#FF9800" } },
       { "scope": "constant.numeric.binary.flagset2.bit.k.mbaa", "settings": { "foreground": "#ff0080" } },
       { "scope": "constant.numeric.binary.flagset2.bit.l.mbaa", "settings": { "foreground": "#81C784" } },
       { "scope": "constant.numeric.binary.flagset2.bit.m.mbaa", "settings": { "foreground": "#fa0000" } },
       { "scope": "constant.numeric.binary.flagset2.bit.n.mbaa", "settings": { "foreground": "#00E5FF" } },
       { "scope": "constant.numeric.binary.flagset2.bit.o.mbaa", "settings": { "foreground": "#7C4DFF" } },
       { "scope": "constant.numeric.binary.flagset2.bit.p.mbaa", "settings": { "foreground": "#6aeb00" } },

       { "scope": "constant.numeric.binary.flagset1.bit.a.mbaa.zero", "settings": { "foreground": "#b6c7ff" } },
       { "scope": "constant.numeric.binary.flagset1.bit.b.mbaa.zero", "settings": { "foreground": "#ffd596" } },
       { "scope": "constant.numeric.binary.flagset1.bit.c.mbaa.zero", "settings": { "foreground": "#fa94c7" } },
       { "scope": "constant.numeric.binary.flagset1.bit.d.mbaa.zero", "settings": { "foreground": "#A5D6A7" } },
       { "scope": "constant.numeric.binary.flagset1.bit.e.mbaa.zero", "settings": { "foreground": "#fc8a8a" } },
       { "scope": "constant.numeric.binary.flagset1.bit.f.mbaa.zero", "settings": { "foreground": "#93effd" } },
       { "scope": "constant.numeric.binary.flagset1.bit.g.mbaa.zero", "settings": { "foreground": "#b9a6ff" } },
       { "scope": "constant.numeric.binary.flagset1.bit.h.mbaa.zero", "settings": { "foreground": "#cdf3ae" } },

       { "scope": "constant.numeric.binary.flagset2.bit.i.mbaa.zero", "settings": { "foreground": "#b6c7ff" } },
       { "scope": "constant.numeric.binary.flagset2.bit.j.mbaa.zero", "settings": { "foreground": "#ffd596" } },
       { "scope": "constant.numeric.binary.flagset2.bit.k.mbaa.zero", "settings": { "foreground": "#fa94c7" } },
       { "scope": "constant.numeric.binary.flagset2.bit.l.mbaa.zero", "settings": { "foreground": "#A5D6A7" } },
       { "scope": "constant.numeric.binary.flagset2.bit.m.mbaa.zero", "settings": { "foreground": "#fc8a8a" } },
       { "scope": "constant.numeric.binary.flagset2.bit.n.mbaa.zero", "settings": { "foreground": "#93effd" } },
       { "scope": "constant.numeric.binary.flagset2.bit.o.mbaa.zero", "settings": { "foreground": "#b9a6ff" } },
       { "scope": "constant.numeric.binary.flagset2.bit.p.mbaa.zero", "settings": { "foreground": "#cdf3ae" } },

       { "scope": "entity.name.section.mbaa",                 "settings": { "foreground": "#00B3A6", "fontStyle": "bold" } },
       { "scope": "keyword.other.property.mbaa",              "settings": { "foreground": "#26C6DA" } },
       { "scope": "keyword.control.end.mbaa",                 "settings": { "foreground": "#fa0000", "fontStyle": "bold" } },

       { "scope": "constant.numeric.vector.base.index.mbaa",  "settings": { "foreground": "#9CCC65", "fontStyle": "bold" } },
       { "scope": "constant.numeric.vector.x.mbaa",           "settings": { "foreground": "#00E5FF" } },
       { "scope": "constant.numeric.vector.y.mbaa",           "settings": { "foreground": "#FFC400" } },
       { "scope": "constant.numeric.vector.addx.mbaa",        "settings": { "foreground": "#7C4DFF" } },
       { "scope": "constant.numeric.vector.addy.mbaa",        "settings": { "foreground": "#FF4081" } },

       { "scope": "constant.numeric.vector.definition.id.mbaa", "settings": { "foreground": "#FF6F00", "fontStyle": "bold" } },
       { "scope": "constant.numeric.vector.base.reference.mbaa", "settings": { "foreground": "#9CCC65" } },
       { "scope": "string.unquoted.vector.name.mbaa",         "settings": { "foreground": "#FFD54F", "fontStyle": "italic" } },
       { "scope": "constant.numeric.vector.count.mbaa",       "settings": { "foreground": "#90A4AE" } },
       { "scope": "constant.numeric.time.ukemi.mbaa",         "settings": { "foreground": "#26C6DA" } },
       { "scope": "constant.numeric.priority.mbaa",           "settings": { "foreground": "#AB47BC" } },
       { "scope": "constant.numeric.priority.ani.mbaa",       "settings": { "foreground": "#AB47BC" } },
       { "scope": "constant.numeric.ko.check.mbaa",           "settings": { "foreground": "#F44336" } },
       { "scope": "constant.numeric.pattern.hit.mbaa",        "settings": { "foreground": "#FFC400" } },
       { "scope": "constant.numeric.pattern.guard.mbaa",      "settings": { "foreground": "#FFC400" } },
       { "scope": "constant.numeric.time.bounce.mbaa",        "settings": { "foreground": "#26C6DA" } },
       { "scope": "constant.numeric.time.vectime.mbaa",       "settings": { "foreground": "#26C6DA" } },
       { "scope": "constant.numeric.binary.flags.vec.mbaa",   "settings": { "foreground": "#B0BEC5" } },

       { "scope": "constant.numeric.binary.vecflag.zero.group.mbaa", "settings": { "foreground": "#546E7A" } },
       { "scope": "constant.numeric.binary.vecflag.bit4.mbaa", "settings": { "foreground": "#4CAF50", "fontStyle": "bold" } },
       { "scope": "constant.numeric.binary.vecflag.bit3.mbaa", "settings": { "foreground": "#fdf91d" } },
       { "scope": "constant.numeric.binary.vecflag.bit2.mbaa", "settings": { "foreground": "#ff37d4" } },
       { "scope": "constant.numeric.binary.vecflag.bit1.mbaa", "settings": { "foreground": "#00ffff" } },
       { "scope": "constant.numeric.binary.vecflag.bit0.mbaa", "settings": { "foreground": "#ff0000" } },

       { "scope": "constant.numeric.value.mbaa", "settings": { "foreground": "#FFB74D" } },
       { "scope": "constant.numeric.sample.param1.mbaa", "settings": { "foreground": "#64B5F6" } },
       { "scope": "constant.numeric.sample.param2.mbaa", "settings": { "foreground": "#81C784" } },
       { "scope": "support.constant.vec.id.mbaa.vector", "settings": { "foreground": "#AB47BC", "fontStyle": "bold" } },
       { "scope": "support.constant.vec.slot.mbaa.vector", "settings": { "foreground": "#FF7043", "fontStyle": "bold" } },

       { "scope": "entity.name.section.selist.mbaa", "settings": { "foreground": "#00B3A6", "fontStyle": "bold" } },
       { "scope": "constant.numeric.selist.id.mbaa", "settings": { "foreground": "#9CCC65", "fontStyle": "bold" } },
       { "scope": "string.unquoted.selist.filename.mbaa", "settings": { "foreground": "#FFD54F", "fontStyle": "italic" } },
       { "scope": "string.unquoted.selist.voice.prefix.mbaa", "settings": { "foreground": "#81C784" } },
       { "scope": "string.unquoted.selist.sound.id.mbaa", "settings": { "foreground": "#FF9800" } },
       { "scope": "comment.line.selist.description.mbaa", "settings": { "foreground": "#B0BEC5", "fontStyle": "italic" } }
  ]
      }
    }
  }
}
